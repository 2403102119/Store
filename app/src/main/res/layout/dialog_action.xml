<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#0000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/dialog_round_conrner"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_action_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="18dp"
            android:text="确认进行此次操作吗？"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/henXian"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/lineGrey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_action_cancle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="16dp"
                android:text="取消"
                android:textColor="#1684FF"
                android:textStyle="bold" />

            <View
                android:id="@+id/divider"
                android:layout_width="@dimen/line_height"
                android:layout_height="match_parent"
                android:background="@color/lineGrey" />

            <TextView
                android:id="@+id/dialog_action_confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="16dp"
                android:text="确认"
                android:textColor="#1684FF"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>